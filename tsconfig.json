{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "importHelpers": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    // Generate d.ts files
    "declaration": true,
    // Additional strict checks
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["dist", "docs"]
}
